pipeline {
    agent { node { label 'maven' } }
    options { skipDefaultCheckout }
    stages {
        stage('Checkout') {
            steps {
                git branch: 'notifications',
                    url: 'https://github.com/tumakine2/DO400-apps'
            }
        }
        stage('Test') {
            steps {
                dir('simple-calculator') {
                    sh './mvnw clean test'
                }
            }
        }
    }
}